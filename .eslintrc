{
  "extends": ["standard"],
  // User modern standard, instead of standard.
  // https://github.com/modern-standard/modern-standard
  "rules": {
    "arrow-parens": [2, "always"],
    "comma-dangle": [2, "always-multiline"],
    "prefer-arrow-callback": 2,
    "prefer-spread": 2,
    "prefer-template": 2,
    "require-yield": 2
  },
  "plugins" : [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true
  }
}